<%- model_class = Quote -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Dashboard" %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_quote_path,
            :class => 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:message) %></th>
      <th><%= model_class.human_attribute_name(:genre) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= link_to quote.id, quote_path(quote) %></td>
        <td><%= quote.message %></td>
        <td><%= quote.genre %></td>
        <td><%= quote.user.try('email') %></td>
        <td><%= quote.created_at.admin_format %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_quote_path(quote), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      quote_path(quote),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="flickr_pagination">
  <div class="page_info">
    <%#= page_entries_info @posts %>
  </div>
  <%= will_paginate @posts, :container => false %>
</div>